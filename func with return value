<html>
    <head>
        <script>
            function add(a,b)
            {
                s=a+b;
                document.write("the sum is " +s);
                document.write("<br>");
                return s;
            }
        </script>
    </head>
        <body>
            <script>
                var x,y,s;
                x=10; y=5;
                add(x,y);
                average=add(x,y)/2;
                percent = add(x,y) * .20;
                document.write("the average is " +average);
                document.write("<br>");
                document.write("20% of the sum is " +percent);
            </script>
        </body>
   
</html>
